{
  "api": {
    "libre_translate": {
      "enabled": true,
      "endpoint": "https://libretranslate.com/translate",
      "api_key": "",
      "format": "text",
      "alternatives": 1
    },
    "fallback": {
      "enabled": true,
      "cache_duration": 86400000
    }
  },
  "languages": {
    "default": "en",
    "supported": [
      "en",
      "fr", 
      "es",
      "de",
      "it",
      "pt",
      "nl",
      "ru",
      "zh",
      "ja",
      "ko"
    ]
  },
  "ui": {
    "language_switcher": true,
    "auto_detect": true,
    "persist_choice": true
  }
} 